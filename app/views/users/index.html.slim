.stripe-dark.off-top: .container: .row: .col-md-10.col-md-push-2
  h1 ÄŒleny

.stripe-light: .container: .row: .col-md-10.col-md-push-2
  table.table.table-hover
    thead
      tr
        th
        th= User.human_attribute_name("first_name")
        th= User.human_attribute_name("location")
        th= User.human_attribute_name("species_list")
        th= User.human_attribute_name("website")
    tbody
      - @users.each do |user|
        tr
          td= user.prefix_title
          td= user.last_name + ' ' + user.first_name + (unless user.suffix_title.blank? then (', ' + user.suffix_title) end )
          td= user.location
          td= user.species_list
          td= user.website
